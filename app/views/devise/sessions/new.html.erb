<% content_for :pageTitle do %>Sign In <% end %>

<% content_for :body do %>

<div class="home-block main indigo accent-1">
    <div class="container">
        <div class="row">
            <div class="col offset-l3 l6 offset-m1 m10 s12">
                <h1 class="heading white-text" style="font-weight: 200;">Sign In</h1>
                <div class="row">
                    <div class="col s12">
                        <div class="card-panel white">
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= f.email_field :email, class: 'validate' %>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= f.password_field :password, autocomplete: "off", class: 'validate' %>
                                        <label for="password">Password</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s6">
                                        <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
                                        </button>
                                    </div>
                                    <% if devise_mapping.rememberable? -%>
                                        <div class="col s6">
                                            <%= f.check_box :remember_me %>
                                            <%= f.label :remember_me %>
                                        </div>
                                    <% end -%>
                                </div>
                            <% end %>
                        </div>
                        <div class="card-panel white">
                            <div class="row" style="margin-bottom: 0;">
                                <div class="col s12">
                                    <p>Forgot your password?</p>
                                    <%= link_to("Reset Your Password", {:controller => 'devise/passwords', :action => 'new'}, class: 'btn') %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% end %>

<%= render template: "layouts/application" %>
