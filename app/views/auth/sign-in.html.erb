<% content_for :pageTitle do %>Sign In <% end %>

<% content_for :body do %>

<div class="home-block main indigo accent-1">
    <div class="container">
        <div class="row">
            <div class="col offset-l3 l6 offset-m1 m10 s12">
                <h1 class="heading white-text" style="font-weight: 200;">Sign In</h1>
                <div class="row">
                    <div class="col s12">
                        <div class="card-panel white">
                            <%= form_tag(:action => 'attempt_sign_in') do %>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= email_field_tag(:email, nil, class: 'validate') %>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= password_field_tag(:password, nil, class: 'validate') %>
                                        <label for="password">Password</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s6">
                                        <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
                                        </button>
                                    </div>
                                    <div class="col s6">
                                        <input type="checkbox" name="remember_me" id="remember_me" />
                                        <label for="remember_me">Remember Me</label>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                        <% if false %>
                            <div class="card-panel white">
                                <div class="row">
                                    <div class="col s12">
                                        <%= link_to("Reset Your Password", {:controller => 'password_resets', :action => 'new'}, :class => "btn") %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% end %>

<%= render template: "layouts/application" %>
