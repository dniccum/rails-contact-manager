<% content_for :pageTitle do %>Your Profile<% end %>

<% content_for :body do %>

<div class="home-block main indigo accent-1">
    <div class="container">
        <div class="row">
            <div class="col offset-l2 l8 offset-m1 m10 s12">
                <h1 class="heading white-text" style="font-weight: 200;">Hello <%= @user.first_name %> <%= @user.last_name %>, <small class="blue-text text-darken-3">here's your profile</small></h1>
                <div class="row">
                    <div class="col s12">
                        <div class="card-panel white">
                            <%= form_for(:user, :url => {:action => 'update_profile', :user_id => @user.id}) do |f| %>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= f.text_field(:first_name, class: 'validate') %>
                                        <label for="first_name">First Name</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= f.text_field(:last_name, class: 'validate') %>
                                        <label for="last_name">Last Name</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= f.email_field(:email, class: 'validate') %>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="input-field col s12">
                                        <%= f.password_field(:password, class: 'validate') %>
                                        <label for="password">Password</label>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col s12">
                                        <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
                                        </button>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% end %>

<% content_for :errors do %>
    <%= render "partials/user_errors" %>
<% end %>

<%= render template: "layouts/application" %>
